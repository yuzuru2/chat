{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "outDir": "./dist/src",
    "sourceMap": false,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "removeComments": true,
    "declaration": false
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/test/*"]
}
